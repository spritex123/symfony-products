{% extends 'AppBundle:Default:index.html.twig' %}

{% block body %}
    <div class="col-xs-12 col-sm-12 col-md-12 green">
        <h3>Authorization</h3>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('authorization') }}" method="post" novalidate>
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />

            {#
                <br /><br />

                <label for="captcha">CAPTCHA: {{ captcha }}</label>
                <input type="text" id="captcha" name="_captcha" />

                <br /><br />
            #}

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <input type="submit" value="Sing in">
        </form>

        {#<form action="{{ path('authorization') }}" method="post" {{ form_enctype(form) }} novalidate>
            {{ form_widget(form) }}
            <input type="submit" value="Sing in">
        </form>#}

    </div>
{% endblock %}
